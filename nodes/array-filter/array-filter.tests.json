[
  {
    "description": "Filter equals",
    "inputs": {
      "array": [1, 2, 3, 2, 4],
      "value": 2
    },
    "settings": {
      "condition": "equals"
    },
    "expected": {
      "array": [2, 2]
    }
  },
  {
    "description": "Filter case insensitive",
    "inputs": {
      "array": ["Hello", "WORLD", "hello", "World"],
      "value": "hello"
    },
    "settings": {
      "condition": "equals",
      "case_sensitive": false
    },
    "expected": {
      "array": ["Hello", "hello"]
    }
  },
  {
    "description": "Filter greater than",
    "inputs": {
      "array": [1, 5, 3, 7, 2],
      "value": 4
    },
    "settings": {
      "condition": "greater_than"
    },
    "expected": {
      "array": [5, 7]
    }
  },
  {
    "description": "Filter contains",
    "inputs": {
      "array": ["apple pie", "banana", "apple", "cherry"],
      "value": "apple"
    },
    "settings": {
      "condition": "contains"
    },
    "expected": {
      "array": ["apple pie", "apple"]
    }
  },
  {
    "description": "Filter exists",
    "inputs": {
      "array": [1, null, 3, null, 5]
    },
    "settings": {
      "condition": "exists"
    },
    "expected": {
      "array": [1, 3, 5]
    }
  }
] 